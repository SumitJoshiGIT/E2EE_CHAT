<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.e2ee.chat.controller.ChatController"
      spacing="10"
      styleClass="chat-container">
    
    <HBox spacing="10">
        <!-- Left panel with user list and search -->
        <VBox spacing="10" HBox.hgrow="NEVER" styleClass="user-list-panel">
            <TextField fx:id="searchField" promptText="Search users..." styleClass="search-field" />
            <ListView fx:id="userList" VBox.vgrow="ALWAYS" prefWidth="250" styleClass="user-list" />
        </VBox>
        
        <!-- Right panel with chat -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="chat-panel">
            <Label fx:id="chatHeaderLabel" text="Select a user to start chatting" styleClass="chat-header" />
            <ListView fx:id="messageList" VBox.vgrow="ALWAYS" styleClass="message-list" />
            
            <VBox fx:id="messageInputPanel" spacing="5" styleClass="message-input-panel">
                <HBox spacing="5">
                    <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Type a message..." />
                    <Button fx:id="sendButton" text="Send" styleClass="send-button" />
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox> 